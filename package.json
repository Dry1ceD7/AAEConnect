{
  "name": "aaeconnect",
  "version": "1.0.0",
  "description": "AAEConnect - High-Performance Enterprise Communication Platform for Advanced ID Asia Engineering Co.,Ltd",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:mobile\" \"npm run dev:desktop\"",
    "dev:mobile": "cd mobile/aaeconnect_mobile && flutter run",
    "dev:desktop": "cd desktop && cargo tauri dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:full": "npm run build:backend && npm run build:frontend && npm run build:mobile && npm run build:desktop",
    "build:backend": "cd backend && cargo build --release",
    "build:mobile": "cd mobile/aaeconnect_mobile && flutter build apk && flutter build ios",
    "build:desktop": "cd desktop && cargo tauri build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:full": "npm run test:backend && npm run test:frontend && npm run test:mobile",
    "test:backend": "cd backend && cargo test",
    "test:frontend": "cd frontend && vitest run",
    "test:mobile": "cd mobile/aaeconnect_mobile && flutter test",
  "keywords": [
    "aaeconnect",
    "enterprise-communication",
    "nodejs",
    "websocket",
    "sveltekit",
    "rust",
    "flutter",
    "tauri",
    "matrix-protocol",
    "high-performance",
    "bmad-method",
    "automotive",
    "thailand",
    "aae"
  ],
  "author": "AAEConnect Development Team <dev@aae.co.th>",
  "license": "Proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/aae/aaeconnect.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "frontend",
    "desktop"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.0"
  },
  "bmad": {
    "version": "2.0",
    "agents": 25,
    "sprint_days": 3,
    "performance_targets": {
      "message_latency_ms": 25,
      "file_upload_init_ms": 500,
      "ui_fps": 120,
      "concurrent_users": 1000,
      "database_query_ms": 10,
      "memory_per_client_mb": 25,
      "startup_time_ms": 1000,
      "search_performance_ms": 50
    },
    "technology_stack": {
      "backend_current": "Node.js + Express + WebSocket",
      "backend_next": "Rust + Axum",
      "frontend": "SvelteKit + TypeScript",
      "mobile": "Flutter",
      "desktop": "Tauri",
      "database": "PostgreSQL + TimescaleDB",
      "cache": "Redis Cluster",
      "security": "Matrix Protocol + Olm/Megolm"
    },
    "aae_integration": {
      "company": "Advanced ID Asia Engineering Co.,Ltd",
      "industry": "Automotive Manufacturing",
      "location": "Chiang Mai, Thailand",
      "employees": 180,
      "target_capacity": 1000,
      "compliance": ["ISO 9001:2015", "IATF 16949"],
      "languages": ["English", "Thai"],
      "website": "aae.co.th",
      "branding": {
        "primary_color": "#00BCD4",
        "secondary_color": "#0097A7", 
        "accent_color": "#00E5FF",
        "theme": "cyan-light-blue-modern"
      }
    }
  }
}